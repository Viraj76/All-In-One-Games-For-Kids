<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardBackgroundColor="@color/BackgroundColor"
    app:cardCornerRadius="@dimen/radius_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:alpha="0.3"
        android:background="@drawable/dashed_stroke_dark"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_coins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/app_font"
                android:gravity="center"
                android:shadowColor="#8B000000"
                android:shadowDx="1.4"
                android:shadowDy="1.4"
                android:shadowRadius="1.6"
                android:textAllCaps="true"
                android:textColor="@color/gold"
                android:textSize="30sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="coin.json"
                app:lottie_loop="true" />

        </LinearLayout>

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/big_texts_font"
            android:gravity="center"
            android:shadowColor="#8B000000"
            android:shadowDx="1.4"
            android:shadowDy="1.4"
            android:shadowRadius="1.6"
            android:textAllCaps="true"
            android:textColor="@color/accentColor_3"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/big_texts_font"
            android:gravity="center"
            android:shadowColor="#8B000000"
            android:shadowDx="1.4"
            android:shadowDy="1.4"
            android:shadowRadius="1.6"
            android:text="@string/to_collect_coins"
            android:textAllCaps="true"
            android:textColor="@color/gold"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_quiz"
                app:tint="@color/accentColor_2" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/app_font"
                android:shadowColor="#8B000000"
                android:shadowDx="1.4"
                android:shadowDy="1.4"
                android:shadowRadius="1.6"
                android:textAllCaps="true"
                android:textColor="@color/accentColor_3"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_puzzle"
                app:tint="@color/accentColor_2" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/app_font"
                android:shadowColor="#8B000000"
                android:shadowDx="1.4"
                android:shadowDy="1.4"
                android:shadowRadius="1.6"
                android:textAllCaps="true"
                android:textColor="@color/accentColor_3"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="25dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_spin"
                app:tint="@color/accentColor_2" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/app_font"
                android:shadowColor="#8B000000"
                android:shadowDx="1.4"
                android:shadowDy="1.4"
                android:shadowRadius="1.6"
                android:textAllCaps="true"
                android:textColor="@color/accentColor_3"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/big_texts_font"
            android:gravity="center"
            android:shadowColor="#8B000000"
            android:shadowDx="1.4"
            android:shadowDy="1.4"
            android:shadowRadius="1.6"
            android:text="@string/or"
            android:textAllCaps="true"
            android:textColor="@color/gold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/watch_ad_to_get_coins_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/big_texts_font"
            android:gravity="center"
            android:shadowColor="#8B000000"
            android:shadowDx="1.4"
            android:shadowDy="1.4"
            android:shadowRadius="1.6"
            android:textAllCaps="true"
            android:textColor="@color/accentColor_3"
            android:textSize="17sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/watchAdForCoinsBTN"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            app:cardBackgroundColor="@color/accentColor_2"
            app:cardCornerRadius="@dimen/radius_2"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/dashed_stroke_alpha"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:visibility="gone"
                android:paddingEnd="15dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/big_texts_font"
                    android:shadowColor="#8B000000"
                    android:shadowDx="1.4"
                    android:shadowDy="1.4"
                    android:shadowRadius="1.6"
                    android:text="@string/watch_ad_capital"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_coin_with_shadow" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progressCoins"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"
            android:indeterminate="true"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>




